<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hk.ust.cse.comp4521.comp4521_gp22_geofencemessaging.NewAccountActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            app:srcCompat="@drawable/people" />

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="160dp">

        <TextView
            android:id="@+id/DisplayName"
            android:layout_width="238dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_marginLeft="60dp"
            android:layout_row="0"
            android:elevation="0dp"
            android:text="Hello!"
            android:textAlignment="center"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/EditName"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/pen" />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="299dp"
        android:layout_marginTop="220dp">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="68dp"
            android:layout_height="56dp"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_row="0"
            android:paddingLeft="10dp"
            app:srcCompat="@drawable/key" />

        <Button
            android:id="@+id/changePW"
            android:layout_width="320dp"
            android:layout_height="58dp"
            android:layout_column="1"
            android:layout_marginRight="20dp"
            android:layout_row="0"
            android:background="@null"
            android:gravity="center|start"
            android:paddingLeft="30dp"
            android:text="Modify Password"
            android:textAlignment="textStart" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="68dp"
            android:layout_height="56dp"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_row="1"
            android:paddingLeft="10dp"
            app:srcCompat="@drawable/mail" />

        <Button
            android:id="@+id/changeMail"
            android:layout_width="320dp"
            android:layout_height="58dp"
            android:layout_column="1"
            android:layout_marginRight="20dp"
            android:layout_row="1"
            android:background="@null"
            android:gravity="center|start"
            android:paddingLeft="30dp"
            android:text="Modify Email"
            android:textAlignment="textStart" />


        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="68dp"
            android:layout_height="56dp"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_row="2"
            android:paddingLeft="10dp"
            app:srcCompat="@drawable/resetmail" />

        <Button
            android:id="@+id/resetemail"
            android:layout_width="320dp"
            android:layout_height="58dp"
            android:layout_column="1"
            android:layout_marginRight="20dp"
            android:layout_row="2"
            android:background="@null"
            android:gravity="center|start"
            android:paddingLeft="30dp"
            android:text="Send Password Reset Email"
            android:textAlignment="textStart" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="68dp"
            android:layout_height="56dp"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_row="3"
            android:paddingLeft="10dp"
            app:srcCompat="@drawable/deleteacc" />

        <Button
            android:id="@+id/deleteAcc"
            android:layout_width="320dp"
            android:layout_height="58dp"
            android:layout_column="1"
            android:layout_marginRight="20dp"
            android:layout_row="3"
            android:background="@null"
            android:gravity="center|start"
            android:paddingLeft="30dp"
            android:text="Permanently Delete Account"
            android:textAlignment="textStart" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="68dp"
            android:layout_height="56dp"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_row="4"
            android:paddingLeft="10dp"
            app:srcCompat="@drawable/signout" />

        <Button
            android:id="@+id/signout"
            android:layout_width="320dp"
            android:layout_height="58dp"
            android:layout_column="1"
            android:layout_marginRight="20dp"
            android:layout_row="4"
            android:background="@null"
            android:gravity="center|start"
            android:paddingLeft="30dp"
            android:text="Sign Out"
            android:textAlignment="textStart" />


    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="530dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/mapBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/com_facebook_button_login_silver_background_color"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/map" />

        <ImageButton
            android:id="@+id/groupChatBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/com_facebook_button_login_silver_background_color"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/groupchat"
            android:contentDescription="" />

        <ImageButton
            android:id="@+id/addBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/com_facebook_button_login_silver_background_color"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/add" />

        <ImageButton
            android:id="@+id/privateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/com_facebook_button_login_silver_background_color"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/privatechat" />

        <ImageButton
            android:id="@+id/meBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/com_facebook_button_login_silver_background_color"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/me" />
    </LinearLayout>




</android.support.design.widget.CoordinatorLayout>